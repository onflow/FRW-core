{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "composite": true,
    "noImplicitAny": false,

    "outDir": "${configDir}/dist",
    "paths": {
      "@onflow/frw-shared/types": ["./packages/shared/src/types/index.ts"],
      "@onflow/frw-shared/constant": ["./packages/shared/src/constant/index.ts"],
      "@onflow/frw-shared/utils": ["./packages/shared/src/utils/index.ts"],
      "@onflow/frw-extension-shared/storage": ["./packages/extension-shared/src/storage.ts"],
      "@onflow/frw-extension-shared/retryOperation": [
        "./packages/extension-shared/src/retryOperation.ts"
      ],
      "@onflow/frw-data-model": ["./packages/data-model/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "${configDir}/dist"]
}
