{
  "name": "@onflow/flow-wallet-core",
  "version": "0.0.1",
  "description": "Core services for Flow Reference Wallet",
  "type": "module",
  "main": "./dist/service/index.js",
  "types": "./dist/service/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "build:dev": "NODE_ENV=development tsup",
    "build:pro": "NODE_ENV=production tsup",
    "build:watch": "NODE_ENV=development tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "pnpm build",
    "pre-commit": "pnpm lint-staged",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs}": "eslint --cache",
    "*.{json,js,ts,jsx,tsx,html,md,mdx,mjs}": "prettier --write"
  },
  "exports": {
    ".": {
      "types": "./dist/service/index.d.ts",
      "import": "./dist/service/index.js",
      "default": "./dist/service/index.js"
    },
    "./service": {
      "types": "./dist/service/index.d.ts",
      "import": "./dist/service/index.js",
      "default": "./dist/service/index.js"
    },
    "./service/*": {
      "types": "./dist/service/*.d.ts",
      "import": "./dist/service/*.js",
      "default": "./dist/service/*.js"
    },
    "./service/keyring": {
      "types": "./dist/service/keyring/index.d.ts",
      "import": "./dist/service/keyring/index.js",
      "default": "./dist/service/keyring/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js",
      "default": "./dist/utils/index.js"
    },
    "./utils/*": {
      "types": "./dist/utils/*.d.ts",
      "import": "./dist/utils/*.js",
      "default": "./dist/utils/*.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js",
      "default": "./dist/*.js"
    },
    "./src/*": {
      "types": "./src/*.ts",
      "import": "./src/*.ts",
      "default": "./src/*.ts"
    }
  },
  "dependencies": {
    "@onflow/flow-wallet-shared": "workspace:*",
    "@onflow/flow-wallet-extension-shared": "workspace:*",
    "@onflow/flow-wallet-data-model": "workspace:*",
    "@noble/secp256k1": "^1.7.2",
    "@onflow/fcl": "^1.13.1",
    "@onflow/typedefs": "^1.4.0",
    "aes-js": "^3.1.2",
    "bignumber.js": "^9.1.2",
    "bip39": "^3.1.0",
    "browser-passworder": "^2.0.3",
    "compare-versions": "^4.1.4",
    "dayjs": "^1.11.13",
    "ethereumjs-util": "^7.1.5",
    "firebase": "^10.14.1",
    "lru-cache": "^11.1.0",
    "rlp": "^3.0.0",
    "web3": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "3.2.4",
    "dotenv": "^16.4.5",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "ethers": "^6.13.4"
  },
  "engines": {
    "node": ">=22.11.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/onflow/FRW-Extension.git",
    "directory": "packages/shared"
  },
  "license": "LGPL-3.0-or-later"
}
