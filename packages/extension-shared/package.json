{
  "name": "@onflow/flow-wallet-extension-shared",
  "version": "0.0.1",
  "description": "Shared code for Flow Reference Wallet Extension",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "pnpm build"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs}": "eslint",
    "*.{json,js,ts,jsx,tsx,html,md,mdx,mjs}": "prettier --write"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./src/*.ts",
      "default": "./src/*.ts"
    }
  },
  "dependencies": {
    "@onflow/flow-wallet-shared": "workspace:*",
    "bignumber.js": "^9.1.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "3.2.4",
    "ethers": "^6.15.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.11.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/onflow/FRW-Extension.git",
    "directory": "packages/extension-shared"
  },
  "license": "LGPL-3.0-or-later"
}
