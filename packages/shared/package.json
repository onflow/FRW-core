{
  "name": "@onflow/flow-wallet-shared",
  "version": "0.0.1",
  "description": "Shared types and utilities for Flow Reference Wallet",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "src/types/index.ts",
    "src/constant/index.ts",
    "src/utils/index.ts"
  ],
  "scripts": {
    "build": "tsup",
    "build:js": "tsup",
    "build:dts": "tsc --emitDeclarationOnly",
    "build:watch": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "pnpm build",
    "pre-commit": "pnpm lint-staged",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs}": "eslint --cache",
    "*.{json,js,ts,jsx,tsx,html,md,mdx,mjs}": "prettier --write"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js",
      "default": "./dist/types/index.js"
    },
    "./types/*": {
      "types": "./dist/types/*.d.ts",
      "import": "./dist/types/*.js",
      "default": "./dist/types/*.js"
    },
    "./constant": {
      "types": "./dist/constant/index.d.ts",
      "import": "./dist/constant/index.js",
      "default": "./dist/constant/index.js"
    },
    "./constant/index": {
      "types": "./dist/constant/index.d.ts",
      "import": "./dist/constant/index.js",
      "default": "./dist/constant/index.js"
    },
    "./constant/emoji.json": {
      "default": "./dist/constant/emoji.json"
    },
    "./constant/erc20.abi.json": {
      "default": "./dist/constant/erc20.abi.json"
    },
    "./constant/erc721.abi.json": {
      "default": "./dist/constant/erc721.abi.json"
    },
    "./constant/*": {
      "types": "./dist/constant/*.d.ts",
      "import": "./dist/constant/*.js",
      "default": "./dist/constant/*.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js",
      "default": "./dist/utils/index.js"
    },
    "./utils/*": {
      "types": "./dist/utils/*.d.ts",
      "import": "./dist/utils/*.js",
      "default": "./dist/utils/*.js"
    }
  },
  "dependencies": {
    "@onflow/typedefs": "^1.4.0",
    "bignumber.js": "^9.1.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "3.2.4",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.11.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/onflow/FRW-Extension.git",
    "directory": "packages/shared"
  },
  "license": "LGPL-3.0-or-later"
}
