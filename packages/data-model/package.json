{
  "name": "@onflow/flow-wallet-data-model",
  "version": "0.0.1",
  "description": "Data model for Flow Reference Wallet",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "pnpm build",
    "pre-commit": "pnpm lint-staged",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs}": "eslint --cache",
    "*.{json,js,ts,jsx,tsx,html,md,mdx,mjs}": "prettier --write"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js",
      "default": "./dist/*.js"
    },
    "./data-cache-types": {
      "types": "./dist/data-cache-types.d.ts",
      "import": "./dist/data-cache-types.js",
      "default": "./dist/data-cache-types.js"
    },
    "./cache-data-keys": {
      "types": "./dist/cache-data-keys.d.ts",
      "import": "./dist/cache-data-keys.js",
      "default": "./dist/cache-data-keys.js"
    },
    "./user-data-keys": {
      "types": "./dist/user-data-keys.d.ts",
      "import": "./dist/user-data-keys.js",
      "default": "./dist/user-data-keys.js"
    },
    "./cache-data-access": {
      "types": "./dist/cache-data-access.d.ts",
      "import": "./dist/cache-data-access.js",
      "default": "./dist/cache-data-access.js"
    },
    "./user-data-access": {
      "types": "./dist/user-data-access.d.ts",
      "import": "./dist/user-data-access.js",
      "default": "./dist/user-data-access.js"
    },
    "./src/*": {
      "types": "./src/*.ts",
      "import": "./src/*.ts",
      "default": "./src/*.ts"
    }
  },
  "dependencies": {
    "@onflow/flow-wallet-shared": "workspace:*",
    "@onflow/flow-wallet-extension-shared": "workspace:*",
    "bignumber.js": "^9.1.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "3.2.4",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "peerDependencies": {
    "ethers": "^6.13.4",
    "react": ">=16.8.0 <17.0.0 || >=17.0.0 <18.0.0 || >=18.0.0 <19.0.0",
    "react-dom": ">=16.8.0 <17.0.0 || >=17.0.0 <18.0.0 || >=18.0.0 <19.0.0"
  },
  "engines": {
    "node": ">=22.11.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/onflow/FRW-Extension.git",
    "directory": "packages/shared"
  },
  "license": "LGPL-3.0-or-later"
}
